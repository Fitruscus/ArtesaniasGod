@model AutenticacionASPNET.Models.Pedido
@{
    ViewData["Title"] = "Editar Pedido";
    var clientes = ViewBag.Clientes as List<AutenticacionASPNET.Models.Cliente>;
}
<h1>Editar Pedido</h1>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="IdCliente">Cliente</label>
        <select asp-for="IdCliente" class="form-control" asp-items="@(new SelectList(clientes, "Id", "Nombre"))"></select>
        <span asp-validation-for="IdCliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaPedido"></label>
        <input asp-for="FechaPedido" class="form-control" type="date" />
        <span asp-validation-for="FechaPedido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MontoTotal"></label>
        <input asp-for="MontoTotal" class="form-control" />
        <span asp-validation-for="MontoTotal" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
