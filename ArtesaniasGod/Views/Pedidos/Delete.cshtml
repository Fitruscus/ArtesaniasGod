@model AutenticacionASPNET.Models.Pedido
@{
    ViewData["Title"] = "Eliminar Pedido";
}
<h1>Eliminar Pedido</h1>
<h3>¿Estás seguro que deseas eliminar este pedido?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cliente?.Nombre</dd>
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.FechaPedido.ToShortDateString()</dd>
        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>
        <dt class="col-sm-2">Monto Total</dt>
        <dd class="col-sm-10">@Model.MontoTotal.ToString("C")</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
