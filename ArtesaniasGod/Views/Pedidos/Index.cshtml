@model IEnumerable<AutenticacionASPNET.Models.Pedido>
@{
    ViewData["Title"] = "Pedidos";
}
<div class="container mt-4">
    <h1 class="mb-4">Pedidos</h1>
    <a class="btn btn-success mb-3" asp-action="Create">Agregar Pedido</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Fecha</th>
                <th>Dirección</th>
                <th>Monto Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cliente?.Nombre</td>
                <td>@item.FechaPedido.ToShortDateString()</td>
                <td>@item.Direccion</td>
                <td>@item.MontoTotal.ToString("C")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
