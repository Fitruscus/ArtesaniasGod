<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArtesaniasGod</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ArtesaniasGod.styles.css" asp-append-version="true" />
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            background: #fafbfc;
        }
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 240px;
            height: 100vh;
            background: linear-gradient(180deg, #d4e157 0%, #fbc02d 100%);
            color: #fff;
            padding: 32px 0 0 0;
            font-family: 'Segoe UI', sans-serif;
        }
        .sidebar h2 {
            font-size: 1.5rem;
            font-weight: bold;
            margin-left: 24px;
            margin-bottom: 2rem;
            color: #fff;
        }
        .sidebar ul {
            list-style: none;
            padding: 0;
        }
        .sidebar ul li {
            margin: 0 0 1.5rem 0;
        }
        .sidebar ul li a {
            color: #fff;
            font-weight: bold;
            text-decoration: none;
            font-size: 1.1rem;
            margin-left: 24px;
            transition: color 0.2s;
        }
        .sidebar ul li a:hover {
            color: #333;
        }
        .main-content {
            margin-left: 240px;
            padding: 40px 30px 30px 30px;
        }
        .footer {
            margin-left: 240px;
        }
    </style>
    <link rel="stylesheet" href="~/css/responsive-sidebar.css" asp-append-version="true" />
</head>
<body>
    <div class="sidebar">
        <h2>ProyectoMVC</h2>
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li><a asp-area="" asp-controller="Tienda" asp-action="Index">Productos</a></li>
            <li><a asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a></li>
            <li><a asp-area="" asp-controller="Pedidos" asp-action="Index">Pedidos</a></li>
        </ul>
    </div>
    <div class="main-content">
        @RenderBody()
    </div>
    <footer class="footer border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ArtesaniasGod
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
