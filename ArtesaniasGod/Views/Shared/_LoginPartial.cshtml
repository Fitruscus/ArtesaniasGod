@using Microsoft.AspNetCore.Identity
@using AutenticacionASPNET.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
        <span class="text-dark">Hola, @UserManager.GetUserName(User)!</span>
        <button type="submit" class="btn btn-link">Cerrar sesión</button>
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login" class="btn btn-link">Iniciar Sesión</a>
    <a asp-controller="Account" asp-action="Register" class="btn btn-link">Registrarse</a>
}
