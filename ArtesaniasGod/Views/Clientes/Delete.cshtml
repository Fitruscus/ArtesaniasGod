@model AutenticacionASPNET.Models.Cliente
@{
    ViewData["Title"] = "Eliminar Cliente";
}
<h1>Eliminar Cliente</h1>
<h3>¿Estás seguro que deseas eliminar este cliente?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>
        <dt class="col-sm-2">Carnet Identidad</dt>
        <dd class="col-sm-10">@Model.CarnetIdentidad</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
