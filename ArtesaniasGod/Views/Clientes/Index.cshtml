@model IEnumerable<AutenticacionASPNET.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-4">
    <h1 class="mb-4">Clientes</h1>
    <a class="btn btn-success mb-3" asp-action="Create">Agregar Cliente</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Dirección</th>
                <th>Carnet Identidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Email</td>
                <td>@item.Direccion</td>
                <td>@item.CarnetIdentidad</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
